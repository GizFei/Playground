<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BottomSheetMainActivity">

        <Button
            style="@style/YFButton.ActionButton"
            android:id="@+id/btn_full_featured_dialog"
            android:text="FullFeaturedBottomSheetDialog"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="HardcodedText"
            />

        <Button
            style="@style/YFButton.ActionButton"
            android:id="@+id/btn_fullscreen"
            android:text="Fullscreen"
            app:layout_constraintTop_toBottomOf="@id/btn_full_featured_dialog"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="HardcodedText"
            />

        <Button
            style="@style/YFButton.ActionButton"
            android:id="@+id/btn_top_spaced_64"
            android:text="TopSpaced-64dp"
            app:layout_constraintTop_toBottomOf="@id/btn_fullscreen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="HardcodedText"
            />

        <Button
            style="@style/YFButton.ActionButton"
            android:id="@+id/btn_top_spaced_200"
            android:text="TopSpaced-200dp"
            app:layout_constraintTop_toBottomOf="@id/btn_top_spaced_64"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="HardcodedText"
            />

        <Button
            style="@style/YFButton.ActionButton"
            android:id="@+id/btn_no_dim"
            android:text="NoDim"
            app:layout_constraintTop_toBottomOf="@id/btn_top_spaced_200"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="HardcodedText"
            />

        <com.google.android.material.switchmaterial.SwitchMaterial
            style="@style/YFSwitch.Action"
            android:id="@+id/switch_cancelable"
            android:text="IsCancelable"
            android:checked="true"
            app:layout_constraintTop_toBottomOf="@id/btn_no_dim"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="HardcodedText"
            />

        <com.google.android.material.switchmaterial.SwitchMaterial
            style="@style/YFSwitch.Action"
            android:id="@+id/switch_hideable"
            android:text="IsHideable"
            android:checked="true"
            app:layout_constraintTop_toBottomOf="@id/switch_cancelable"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="HardcodedText"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
