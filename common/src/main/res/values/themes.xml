<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Playground" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- 无工具栏主题 -->
    <style name="Theme.Playground.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- 按钮样式 -->
    <style name="YFButton" />
    <style name="YFButton.ActionButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginEnd">36dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="cornerRadius">36dp</item>
    </style>
    <style name="YFButton.Wireframe" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@drawable/bg_round_corner_outline</item>
        <item name="cornerRadius">36dp</item>
    </style>
    <style name="YFButton.Wireframe.FullWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginEnd">36dp</item>
    </style>
    <style name="YFButton.Solid" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">36dp</item>
    </style>

    <style name="YFSwitch" />
    <style name="YFSwitch.Action" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginEnd">36dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="switchMinWidth">56dp</item>
    </style>

    <style name="YFTextView" />
    <style name="YFTextView.Main" parent="TextAppearance.MaterialComponents.Body1" />

    <style name="YFTextAppearance" />
    <style name="YFTextAppearance.Main" parent="TextAppearance.MaterialComponents.Body1" />

</resources>